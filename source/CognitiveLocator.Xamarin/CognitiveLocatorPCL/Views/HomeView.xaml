<?xml version="1.0" encoding="UTF-8"?>
<views:BaseView x:Class="CognitiveLocator.Views.HomeView" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:views="clr-namespace:CognitiveLocator.Views;assembly=CognitiveLocatorPCL" Title="{Binding Title}">
    <ScrollView>
        <StackLayout Margin="40,10,40,0" VerticalOptions="Center" Spacing="30">
            <Label HorizontalOptions="Center" VerticalOptions="End" FontSize="22" FontAttributes="Bold" Text="¿Necesitas ayuda?" />
            <Button FontSize="16" HeightRequest="60" Command="{Binding CreateReportCommand}" Text="Reportar persona" />
            <Button FontSize="16" HeightRequest="60" Command="{Binding SearchPersonNameCommand}" Text="Buscar por nombre" />
            <Button FontSize="16" HeightRequest="60" Command="{Binding SearchPersonPictureCommand}" Text="Buscar por foto" />
            <Button FontSize="16" HeightRequest="60" BackgroundColor="#FF9940" Command="{Binding AboutCommand}" Text="Acerca de..." />
            <Label FontSize="14" Text="Responsiva: Las imagenes e información de personas usadas dentro de la aplicación son para el apoyo de las personas extraviadas, la aplicación Busca.me no compartirá dicha información con terceros o particulares." />
        </StackLayout>
    </ScrollView>
</views:BaseView>