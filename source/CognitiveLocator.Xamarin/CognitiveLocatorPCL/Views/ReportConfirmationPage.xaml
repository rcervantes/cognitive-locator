<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CognitiveLocator.Views.ReportConfirmationPage" xmlns:viewmodels="clr-namespace:CognitiveLocator.ViewModels" Title="{Binding Title}">
    <ContentPage.BindingContext>
        <viewmodels:ReportConfirmationViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid Margin="20,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="50" />
                <RowDefinition Height="100" />
                <RowDefinition Height="50" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="1" HorizontalOptions="Center" VerticalOptions="End" FontSize="30" Text="Gracias por tu apoyo" HorizontalTextAlignment="Center" />
            <Label Grid.Row="2" HorizontalOptions="Center" VerticalOptions="End" FontSize="30" Text="Puedes estar cambiando la vida de una familia" HorizontalTextAlignment="Center" />
            <Button Grid.Row="3" Text="Inicio" FontSize="20" Command="{Binding HomeCommand}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>