<?xml version="1.0" encoding="UTF-8"?>
<views:BaseView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:views="clr-namespace:CognitiveLocator.Views;assembly=CognitiveLocatorPCL"
    x:Class="CognitiveLocator.Views.PersonDetailView"
    Title="{Binding Title}">
	<views:BaseView.Content>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <Image Source="{Binding CurrentPerson.Picture}" HeightRequest="150" Margin="0,10,0,0" />
            <TableView Intent="Form" HasUnevenRows="true">
                <TableSection>
                    <EntryCell Label="Nombre:" Text="{Binding CurrentPerson.Name}" IsEnabled="false"/>
                    <EntryCell Label="Apellidos:" Text="{Binding CurrentPerson.LastName}" IsEnabled="false"/>
                    <EntryCell Label="Edad:" Text="{Binding CurrentPerson.Age, StringFormat='{0} años'}" IsEnabled="false"/>
                    <EntryCell Label="Ubicación:" Text="{Binding CurrentPerson.Location}" IsEnabled="false"/>
                </TableSection>
            </TableView>
        </StackLayout>
	</views:BaseView.Content>
</views:BaseView >
