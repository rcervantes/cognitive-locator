<?xml version="1.0" encoding="UTF-8"?>
<pages:BasePage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="CognitiveLocator.Pages.SettingsPage" 
    xmlns:pages="clr-namespace:CognitiveLocator.Pages" Title="{Binding Title}">
    <ContentPage.Content>
        <TableView Intent="Settings">
            <TableRoot>
                <TableSection Title="{Binding Settings_GeneralSettings}">
                    <ImageCell Text="{Binding Settings_Language}" TextColor="Gray" ImageSource="language.png" Command="{Binding LanguageSettingsCommand}" />
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</pages:BasePage>